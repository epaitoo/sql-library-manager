extends layout.pug

block content

  h1= title
  form
    p
      label(for='title') Title
      input#title(name='title', type='text')
    p
      label(for='author') Author
      input#author(name='author', type='text')
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text')
    p
      label(for='year') Year
      input#year(name='year', type='text')
    p
      input(type='submit', value='Update Book')
  form(method='post', action='/books/8/delete', onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href='/') Cancel
    p
      input(type='submit', value='Delete Book')